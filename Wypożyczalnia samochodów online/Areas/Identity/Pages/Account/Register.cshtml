@page
@model Wypożyczalnia_samochodów_online.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}


<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="text-center">Zarejestruj się</h2>
                <hr />

                <!-- Formularz rejestracji -->
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Wpisz swój e-mail" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Wpisz swoje hasło" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Potwierdź swoje hasło" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Zarejestruj</button>
                </form>

                <!-- Link do logowania, jeśli użytkownik już ma konto -->
                <div class="mt-3 text-center">
                    <a asp-page="./Login">Masz już konto? Zaloguj się</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sprawdzenie, czy są błędy w ModelState i wyświetlenie ich -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<!-- Skrypty do walidacji formularza po stronie klienta -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
