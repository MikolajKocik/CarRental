@model Wypożyczalnia_samochodów_online.Models.Car

<h2>Dodaj samochód</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Brand">Marka</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerDay">Cena za dzień</label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable">Dostępność</label>
        <input asp-for="IsAvailable" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Ścieżka do obrazu</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>
