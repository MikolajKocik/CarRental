@model Wypożyczalnia_samochodów_online.Models.Car

<h2>Szczegóły pojazdu</h2>

<div class="mb-3">
    <img src="@Model.ImageUrl" alt="Zdjęcie pojazdu" style="max-width:300px;" /> <!-- Wyświetlenie zdjęcia pojazdu na podstawie ImageUrl -->
</div>

<p><strong>Marka:</strong> @Model.Brand</p>
<p><strong>Model:</strong> @Model.Model</p>
<p><strong>Cena za dzień:</strong> @Model.PricePerDay zł</p>

<!-- Walidacje pól niepustych -->
@if (!string.IsNullOrEmpty(Model.Description))
{
    <p><strong>Opis:</strong> @Model.Description</p>
}

@if (!string.IsNullOrEmpty(Model.Engine))
{
    <p><strong>Silnik:</strong> @Model.Engine</p>
}

<!-- Sprawdzenie, czy rok produkcji jest większy od 0 -->
@if (Model.Year > 0)
{
    <p><strong>Rok produkcji:</strong> @Model.Year</p>
}

<a asp-controller="Car" asp-action="Index" class="btn btn-secondary">Powrót do listy</a> <!-- Link, który przekierowuje użytkownika z powrotem do listy samochodów -->
