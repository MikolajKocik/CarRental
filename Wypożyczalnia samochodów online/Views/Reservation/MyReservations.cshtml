@model IEnumerable<Wypożyczalnia_samochodów_online.Models.Reservation>

<h2>Moje rezerwacje</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Samochód</th>
            <th>Data rozpoczęcia</th>
            <th>Data zakończenia</th>
            <th>Status</th>
            <th>Koszt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@(reservation.Car?.Brand) @(reservation.Car?.Model)</td>
                <td>@reservation.StartDate.ToShortDateString()</td>
                <td>@reservation.EndDate.ToShortDateString()</td>
                <td>@(reservation.IsConfirmed ? "Potwierdzona" : "Oczekuje na potwierdzenie")</td>
                <td>@reservation.TotalCost.ToString("C2")</td>
            </tr>
        }
    </tbody>
</table>
